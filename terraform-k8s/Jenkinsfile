pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: terraform
    image: hashicorp/terraform:1.6
    command:
    - cat
    tty: true
'''
        }
    }
    
    parameters {
        choice(
            name: 'ACTION',
            choices: ['plan', 'apply', 'destroy'],
            description: 'Select Terraform action'
        )
        // ADDED: S3 Bucket Parameter
        string(
            name: 'S3_BUCKET',
            defaultValue: 'my-terraform-state-bucket',
            description: 'S3 Bucket name for Terraform Backend'
        )
        string(
            name: 'CLUSTER_NAME',
            defaultValue: 'jenkins-k8s-cluster',
            description: 'Kubernetes cluster name'
        )
        choice(
            name: 'AWS_REGION',
            choices: ['us-east-1', 'us-west-2', 'eu-west-1'],
            description: 'AWS Region'
        )
        string(
            name: 'TERRAFORM_REPO',
            defaultValue: 'https://github.com/acwarya/terraform-k8s-aws.git',
            description: 'Terraform repository URL'
        )
        string(
            name: 'TERRAFORM_BRANCH',
            defaultValue: 'main',
            description: 'Git branch to use'
        )
    }
    
    environment {
        AWS_DEFAULT_REGION = "${params.AWS_REGION}"
        TF_VAR_cluster_name = "${params.CLUSTER_NAME}"
        TF_VAR_aws_region = "${params.AWS_REGION}"
        TERRAFORM_DIR = 'terraform-code'
    }
    
    stages {
        stage('Cleanup Workspace') {
            steps {
                echo 'Cleaning workspace...'
                deleteDir()
            }
        }
        
        stage('Clone Terraform Repository') {
            steps {
                echo 'Cloning Terraform code from GitHub...'
                dir("${env.TERRAFORM_DIR}") {
                    git branch: "${params.TERRAFORM_BRANCH}",
                        url: "${params.TERRAFORM_REPO}"
                }
            }
        }
        
        stage('Terraform Init') {
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        echo 'Initializing Terraform with Backend Config...'
                        // FIXED: Added backend-config to resolve EOF error
                        sh """
                            terraform init -no-color \
                            -backend-config="bucket=${params.S3_BUCKET}" \
                            -backend-config="region=${params.AWS_REGION}" \
                            -backend-config="key=terraform.tfstate"
                        """
                    }
                }
            }
        }
        
        stage('Terraform Validate') {
            when { expression { params.ACTION != 'destroy' } }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        sh 'terraform validate -no-color'
                    }
                }
            }
        }
        
        stage('Terraform Plan') {
            when { expression { params.ACTION == 'plan' || params.ACTION == 'apply' } }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        withCredentials([
                            string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                            string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
                        ]) {
                            sh 'terraform plan -no-color -out=tfplan'
                        }
                    }
                }
            }
        }
        
        stage('Approval for Apply') {
            when { expression { params.ACTION == 'apply' } }
            steps {
                script {
                    input message: 'Deploy infrastructure to AWS?', 
                          ok: 'Yes, Deploy Now'
                }
            }
        }
        
        stage('Terraform Apply') {
            when { expression { params.ACTION == 'apply' } }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        withCredentials([
                            string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                            string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
                        ]) {
                            sh 'terraform apply -no-color -auto-approve tfplan'
                        }
                    }
                }
            }
        }
        
        stage('Approval for Destroy') {
            when { expression { params.ACTION == 'destroy' } }
            steps {
                script {
                    input message: 'DESTROY all resources?', 
                          ok: 'Yes, Destroy Everything'
                }
            }
        }
        
        stage('Terraform Destroy') {
            when { expression { params.ACTION == 'destroy' } }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        withCredentials([
                            string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                            string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
                        ]) {
                            sh 'terraform destroy -no-color -auto-approve'
                        }
                    }
                }
            }
        }
        
        stage('Display Outputs and Save Keys') {
            when { expression { params.ACTION == 'apply' } }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        sh '''
                            terraform output -no-color > deployment-info.txt
                            ls -lh *.pem 2>/dev/null || echo "No .pem files found"
                        '''
                        archiveArtifacts artifacts: 'deployment-info.txt, *.pem', fingerprint: true
                    }
                }
            }
        }
    }
    
    post {
        always {
            container('terraform') {
                dir("${env.TERRAFORM_DIR}") {
                    sh 'rm -f tfplan 2>/dev/null || true'
                }
            }
        }
    }
}
