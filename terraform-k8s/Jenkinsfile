pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: terraform
    image: hashicorp/terraform:1.6
    command:
    - cat
    tty: true
'''
        }
    }
    
    parameters {
        choice(name: 'ACTION', choices: ['plan', 'apply', 'destroy'], description: 'Select action')
        string(name: 'S3_BUCKET', defaultValue: 'my-terraform-state-bucket', description: 'S3 Backend Bucket')
        string(name: 'CLUSTER_NAME', defaultValue: 'jenkins-k8s-cluster', description: 'K8s cluster name')
        choice(name: 'AWS_REGION', choices: ['us-east-1', 'us-west-2', 'eu-west-1'], description: 'AWS Region')
        string(name: 'TERRAFORM_REPO', defaultValue: 'https://github.com/acwarya/terraform-k8s-aws.git')
        string(name: 'TERRAFORM_BRANCH', defaultValue: 'main')
    }
    
    environment {
        // Global AWS Variables
        AWS_DEFAULT_REGION = "${params.AWS_REGION}"
        
        // Injecting Global Jenkins Credentials
        // These will be available in EVERY stage automatically
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
        
        // Terraform Variables
        TF_VAR_cluster_name = "${params.CLUSTER_NAME}"
        TF_VAR_aws_region = "${params.AWS_REGION}"
        TERRAFORM_DIR = 'terraform-code'
    }
    
    stages {
        stage('Cleanup & Clone') {
            steps {
                deleteDir()
                dir("${env.TERRAFORM_DIR}") {
                    git branch: "${params.TERRAFORM_BRANCH}", url: "${params.TERRAFORM_REPO}"
                }
            }
        }
        
        stage('Terraform Init') {
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        // No withCredentials needed here anymore!
                        sh """
                            terraform init -no-color \
                            -backend-config="bucket=${params.S3_BUCKET}" \
                            -backend-config="region=${params.AWS_REGION}" \
                            -backend-config="key=terraform.tfstate"
                        """
                    }
                }
            }
        }
        
        stage('Terraform Plan') {
            when { expression { params.ACTION == 'plan' || params.ACTION == 'apply' } }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        sh 'terraform plan -no-color -out=tfplan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            when { expression { params.ACTION == 'apply' } }
            steps {
                script {
                    input message: 'Deploy to AWS?', ok: 'Deploy'
                }
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        sh 'terraform apply -no-color -auto-approve tfplan'
                    }
                }
            }
        }
        
        stage('Terraform Destroy') {
            when { expression { params.ACTION == 'destroy' } }
            steps {
                script {
                    input message: 'Destroy all resources?', ok: 'Destroy'
                }
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        sh 'terraform destroy -no-color -auto-approve'
                    }
                }
            }
        }
    }
}
