pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: terraform
    image: hashicorp/terraform:1.6
    command:
    - cat
    tty: true
'''
        }
    }
    
    parameters {
        choice(
            name: 'ACTION',
            choices: ['plan', 'apply', 'destroy'],
            description: 'Select Terraform action'
        )
        string(
            name: 'CLUSTER_NAME',
            defaultValue: 'jenkins-k8s-cluster',
            description: 'Kubernetes cluster name'
        )
        choice(
            name: 'AWS_REGION',
            choices: ['us-east-1', 'us-west-2', 'eu-west-1'],
            description: 'AWS Region'
        )
        string(
            name: 'TERRAFORM_REPO',
            defaultValue: 'https://github.com/acwarya/terraform-k8s-aws.git',
            description: 'Terraform repository URL'
        )
        string(
            name: 'TERRAFORM_BRANCH',
            defaultValue: 'main',
            description: 'Git branch to use'
        )
    }
    
    environment {
        AWS_DEFAULT_REGION = "${params.AWS_REGION}"
        TF_VAR_cluster_name = "${params.CLUSTER_NAME}"
        TF_VAR_aws_region = "${params.AWS_REGION}"
        TERRAFORM_DIR = 'terraform-code'
    }
    
    stages {
        stage('Cleanup Workspace') {
            steps {
                echo 'Cleaning workspace...'
                deleteDir()
            }
        }
        
        stage('Clone Terraform Repository') {
            steps {
                echo 'Cloning Terraform code from GitHub...'
                echo "Repository: ${params.TERRAFORM_REPO}"
                echo "Branch: ${params.TERRAFORM_BRANCH}"
                
                dir("${env.TERRAFORM_DIR}") {
                    git branch: "${params.TERRAFORM_BRANCH}",
                        url: "${params.TERRAFORM_REPO}"
                }
                
                echo 'Repository cloned successfully'
                sh "ls -la ${env.TERRAFORM_DIR}"
            }
        }
        
        stage('Terraform Init') {
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        echo 'Initializing Terraform...'
                        sh 'terraform version'
                        sh 'terraform init -no-color'
                    }
                }
            }
        }
        
        stage('Terraform Validate') {
            when {
                expression { params.ACTION != 'destroy' }
            }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        echo 'Validating Terraform configuration...'
                        sh 'terraform validate -no-color'
                    }
                }
            }
        }
        
        stage('Terraform Plan') {
            when {
                expression { params.ACTION == 'plan' || params.ACTION == 'apply' }
            }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        echo 'Creating Terraform plan...'
                        withCredentials([
                            string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                            string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
                        ]) {
                            sh '''
                                terraform plan -no-color -out=tfplan
                                echo ""
                                echo "=================================="
                                echo "Plan Summary:"
                                echo "Cluster: ${TF_VAR_cluster_name}"
                                echo "Region: ${AWS_DEFAULT_REGION}"
                                echo "=================================="
                            '''
                        }
                    }
                }
            }
        }
        
        stage('Approval for Apply') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                script {
                    input message: 'Deploy infrastructure to AWS?', 
                          ok: 'Yes, Deploy Now'
                }
            }
        }
        
        stage('Terraform Apply') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        echo 'Deploying infrastructure...'
                        withCredentials([
                            string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                            string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
                        ]) {
                            sh 'terraform apply -no-color -auto-approve tfplan'
                        }
                        echo 'Deployment complete!'
                    }
                }
            }
        }
        
        stage('Approval for Destroy') {
            when {
                expression { params.ACTION == 'destroy' }
            }
            steps {
                script {
                    input message: 'DESTROY all resources?', 
                          ok: 'Yes, Destroy Everything'
                }
            }
        }
        
        stage('Terraform Destroy') {
            when {
                expression { params.ACTION == 'destroy' }
            }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        echo 'Destroying infrastructure...'
                        withCredentials([
                            string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                            string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY')
                        ]) {
                            sh 'terraform destroy -no-color -auto-approve'
                        }
                        echo 'All resources destroyed!'
                    }
                }
            }
        }
        
        stage('Display Outputs and Save Keys') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                container('terraform') {
                    dir("${env.TERRAFORM_DIR}") {
                        echo 'Retrieving deployment information...'
                        sh '''
                            echo ""
                            echo "=================================="
                            echo "CLUSTER ACCESS INFORMATION"
                            echo "=================================="
                            terraform output -no-color
                            echo ""
                            
                            # Save outputs
                            terraform output -no-color > deployment-info.txt
                            
                            # Find and display SSH key info
                            echo ""
                            echo "SSH Key Files:"
                            ls -lh *.pem 2>/dev/null || echo "No .pem files found"
                            
                            # Get master IP
                            MASTER_IP=$(terraform output -raw master_public_ip 2>/dev/null || echo "unknown")
                            SSH_KEY=$(ls *.pem 2>/dev/null | head -n1)
                            
                            echo ""
                            echo "=================================="
                            echo "QUICK ACCESS COMMAND:"
                            echo "=================================="
                            if [ -f "$SSH_KEY" ]; then
                                echo "ssh -i $SSH_KEY ubuntu@$MASTER_IP"
                                echo ""
                                echo "Download the SSH key from Jenkins artifacts:"
                                echo "Build #${BUILD_NUMBER} -> Artifacts -> $SSH_KEY"
                            fi
                            echo ""
                        '''
                        
                        // Archive deployment info
                        archiveArtifacts artifacts: 'deployment-info.txt', 
                                        fingerprint: true,
                                        allowEmptyArchive: true
                        
                        // Archive SSH key (IMPORTANT!)
                        archiveArtifacts artifacts: '*.pem', 
                                        fingerprint: true,
                                        allowEmptyArchive: true
                    }
                }
            }
        }
    }
    
    post {
        success {
            script {
                echo ''
                echo '=================================='
                echo 'Pipeline completed successfully!'
                echo '=================================='
                if (params.ACTION == 'apply') {
                    echo ''
                    echo 'Next Steps:'
                    echo '1. Go to Build Artifacts (below)'
                    echo '2. Download the .pem SSH key file'
                    echo '3. Download deployment-info.txt for IPs'
                    echo '4. Connect: ssh -i <key>.pem ubuntu@<master-ip>'
                    echo ''
                }
            }
        }
        failure {
            echo 'Pipeline failed! Check logs above.'
        }
        always {
            container('terraform') {
                dir("${env.TERRAFORM_DIR}") {
                    sh 'rm -f tfplan 2>/dev/null || true'
                }
            }
        }
    }
}
